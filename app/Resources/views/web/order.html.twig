{% extends "base.html.twig" %}
{% form_theme form 'form/bootstrap_3_layout.html.twig' %}

{% block body %}
    <div class="wrapper">
        <div class="content-block">
            <div class="content-block-inner">
                {{ form_start(form, { 'attr': {'data-toggle': 'validate-me'}}) }}
                    <h1>Ваши контакты</h1>
                    <div class="col-md-6">
                        {{ form_row(form.full_name) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.phone) }}
                        <div>
                            <small><span class="red">*</span> - поля обязательные для заполнения</small>
                        </div>
                    </div>

                    <div class="col-md-6">
                        {{ form_row(form.comment) }}
                    </div>
                    <div class="clearfix"></div>

                    <h1>Смета</h1>
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Наименование</th>
                            <th>количество</th>
                            <th>сумма</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for product in basket.products %}
                            <tr>
                                <td>{{ product.title }}</td>
                                <td>{{ product.count }} {{ product.unit }} по {{ product.price_max }}₽</td>
                                <td>{{ product.price_max * product.count }}₽</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <td></td>
                            <td><b class="pull-right"></b></td>
                            <td><b>{{ basket.totalPriceMax }}₽</b></td>
                        </tr>
                        </tfoot>
                    </table>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg">Оформить</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $('form[data-toggle="validate-me"]').validator({
            'errors': {

            }
        })
    </script>
{% endblock %}