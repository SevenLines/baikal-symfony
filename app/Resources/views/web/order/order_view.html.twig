{% extends "base.html.twig" %}

{% block body %}
    <div class="wrapper">
        <div class="content-block">
            <div class="content-block-inner">
                <h1>{% if basket.products %}Заказ{% else %}Заявка{% endif %} № {{ basket.id }}</h1>
                <h2>Указанные данные</h2>
                <b>ФИО: </b>{{ basket.fullName }}<br>
                <b>Электронный адрес: </b>{{ basket.email }} <br>
                <b>Телефон: </b>{{ basket.phone }}<br>
                <b>Комментрий: </b>
                <p>{{ basket.comment }}

                    {% if basket.products %}
                        {% include ":web/order:_products.html.twig" %}
                    {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $('form[data-toggle="validate-me"]').validator({
            'errors': {}
        })
    </script>
{% endblock %}