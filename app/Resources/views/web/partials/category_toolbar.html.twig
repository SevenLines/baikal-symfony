<div class="content-block category-toolbar {{ class }}">
    <div class="content-block-inner">
        <div class="price-block">
            {% verbatim %}
        <select class="form-control categories-select" @change="categorySelectChange($event)">
            <option v-for="category in categories" v-bind:value="category.id">
                {{category.title}}
            </option>
        </select>
        <ul class="nav nav-pills categories-pills">
            <li class="" v-for="category in categories" v-bind:class="{active: isActive(category)}">
                <a href="#"
                   class="product-category-tag"
                    v-on:click.prevent="toggleCategory(category.id, $event)">
                   {{ category.title }}
                </a>
            </li>
        </ul>
        <div class="input-group input-group hidden-xs">
            <input type="text" placeholder="поиск по наименованию" class="form-control"
            v-model="productQuery">
            <div class="input-group-addon">
                <i class="fa fa-search"></i>
            </div>
        </div>
        {% endverbatim %}
        </div>
        <div class="product-category">
            <div class="product-category-items">
                <table class="table table-striped table-hover ">
                    <thead>
                    <tr>
                        <th class="title">Наименование</th>
                        <th class="price">Цена</th>
                        <th class="unit">Ед.</th>
                        <th>
                            <div class="btn btn-default" style="visibility: hidden">
                                <i class="fa fa-shopping-basket"> </i> <span class="hidden-sm hidden-xs">В корзину</span>
                            </div>
                        </th>
                    </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>